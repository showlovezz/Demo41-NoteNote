<section id="section_note_index">
	<div class="container mt-5">
		<div class="row">
				
			<% unless @notes.blank? %>
				<% @notes.each do |note| %>
					<div class="col-4">
						<%= link_to note_path(note), class: "card mb-5", style: "text-decoration: none;" do %>
					    <div class="card-body">
					      <h5 class="card-title"><%= note.title %></h5>
					    </div>
					    <div class="card-footer">
					      <small><%= time_ago_in_words(note.created_at) %></small>
					    </div>
					  <% end %>
				  </div>
				<% end %>
			<% else %>
				<div class="col-6 offset-3 mt-5">
					<div class="add_note text-center">
						<h2>Add a Note</h2>
						<p>It appears you haven't created any notes yet... Lets fix that. Why don't you go ahead and create a new note.</p>
						<%= link_to "New Note", new_note_path, class: "btn btn-outline-warning btn-lg" %>
					</div>
				</div>
			<% end %>

		</div>
	</div>
</section>